.container {
  padding: 20rpx;
}

.add-btn-container {
  margin-bottom: 20rpx;
}

.add-btn {
  width: 100%;
}

.list {
  margin-top: 20rpx;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.item-content {
  flex: 1;
}

.item-title {
  font-size: 32rpx;
  color: #333;
}

.item-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.item-actions {
  margin-left: 20rpx;
}

.action-btn {
  margin-left: 10rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 40rpx;
}
